let mapleader = " "

set relativenumber

set showmode

"search options
set ignorecase
set smartcase

set scrolloff=999

" switch : and ;
nnoremap ; :
nnoremap : ;

" Integrate with system clipboard
set clipboard=unnamedplus,unnamed

nnoremap <leader><space> :action SearchEverywhere<cr>

" easy window movement
nnoremap <leader>w :action VimWindowSplitVertical<cr>
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

" Moving blocks of text in visual mode
vnoremap < <gv
vnoremap > >gv

nnoremap / :action Find<CR>

" Quickly edit/reload this configuration file
nnoremap <leader>ev <C-w>v<C-w>l:e ~/.ideavimrc<CR>
nnoremap <leader>sv :so ~/.ideavimrc<CR>
