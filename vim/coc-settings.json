{
  "$schema": "http://json-schema.org/draft-06/schema",
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "languageserver": {
    "bash": {
      "command": "~/.config/coc/extensions/node_modules/coc-sh/node_modules/.bin/bash-language-server",
      "args": ["start"],
      "filetypes": ["bash","sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "sh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "command": "shfmt",
      "args": ["-i", "2", "-bn", "-ci", "-sr"]
    }
  },
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.sortImports.path": "isort",
  "python.formatting.blackArgs": ["--line-length=120"],
  "python.linting.flake8Args": ["--max-line-length=120","--ignore=E203,W503"],
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "http://json.schemastore.org/ansible-stable-2.9": "yaml.ansible"
  }
}
