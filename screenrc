hardstatus on
hardstatus alwayslastline
logfile $HOME/
backtick 1 0 0 date +%Y%m%d-%H%M
logfile '~/log/%1`.%n'
hardstatus string "%{+b wk} %-w%{+b wk} %n %t %{-}%+w %41=%H @ %l ~/%H_%1`.%n %-= %= %D,%c:%s "

altscreen on
autodetach on
startup_message off
defscrollback 100000
vbell off
term xterm-256color
# fix screen size
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

deflog off
