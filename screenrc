hardstatus on
hardstatus alwayslastline
hardstatus string "%{+b wk} %-w%{+b wk} %n %t %{-}%+w %41=%H @ %l %-= %= %D,%c:%s "

autodetach on
startup_message off
defscrollback 100000
vbell off
term xterm-256color
# fix screen size
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'

logfile $HOME/lib/screen-logs/%Y%m%d-%n.log
deflog on
