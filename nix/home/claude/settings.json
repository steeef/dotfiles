{
  "enabledPlugins": {
    "command-safety@claude-hooks": true,
    "env-protection@claude-hooks": true,
    "file-protection@claude-hooks": true,
    "git-hooks@claude-hooks": true,
    "ocr@aclarify": true
  },
  "includeCoAuthoredBy": false,
  "spinnerTipsEnabled": false,
  "companyAnnouncements": [],
  "statusLine": {
    "type": "command",
    "command": "claude-powerline",
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(prek run:*)",
      "Bash(rg:*)",
      "Bash(yamllint:*)",
      "Bash(yq:*)"
    ],
    "deny": [
      "Bash(pre-commit:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.bin/format.sh"
          }
        ]
      }
    ],
    "WorktreeCreate": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.bin/worktree-setup.sh"
          }
        ]
      }
    ]
  }
}
