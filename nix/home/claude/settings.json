{
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true
  },
  "includeCoAuthoredBy": false,
  "statusLine": {
    "type": "command",
    "command": "claude-powerline"
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(pre-commit run:*)",
      "Bash(rg:*)",
      "Bash(yamllint:*)",
      "Bash(yq:*)"
    ],
    "deny": [],
    "defaultMode": "plan"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/notification_hook.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/notification_hook.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/skill_activation_hook.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/safety-hooks/hooks/bash_hook.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/kubectl_safety_hook.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/terraform_safety_hook.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-worktree-integration/hooks/worktree_hook.py"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/file_size_conditional_hook.py"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-safety/hooks/claude_md_block_hook.py"
          },
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/safety-hooks/hooks/file_length_limit_hook.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.bin/format.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_CODE_TOOLS_PATH/plugins/steeef-worktree-integration/hooks/cleanup_hook.py"
          }
        ]
      }
    ]
  }
}
