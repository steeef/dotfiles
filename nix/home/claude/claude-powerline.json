{
  "theme": "tokyo-night",
  "display": {
    "style": "powerline",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true, "showBasename": true },
          "git": {
            "enabled": true,
            "showSha": true,
            "showWorkingTree": true,
            "showOperation": true,
            "showTag": true,
            "showTimeSinceCommit": false,
            "showStashCount": true,
            "showUpstream": false,
            "showRepoName": false
          },
          "tmux": { "enabled": true }
        }
      },
      {
        "segments": {
          "version": { "enabled": true },
          "model": { "enabled": true },
          "context": { "enabled": true },
          "block": { "enabled": true, "type": "time", "burnType": "tokens" },
          "today": { "enabled": true, "type": "tokens" }
        }
      }
    ]
  }
}