{
  "theme": "tokyo-night",
  "display": {
    "style": "powerline",
    "lines": [
      {
        "segments": {
          "directory": { "enabled": true, "showBasename": true },
          "model": { "enabled": true },
          "session": { "enabled": true, "type": "both" },
          "today": { "enabled": true, "type": "both" }
        }
      },
      {
        "segments": {
          "block": { "enabled": true, "type": "cost", "burnType": "cost" },
          "version": { "enabled": true },
          "metrics": {
            "enabled": true,
            "showResponseTime": true,
            "showLastResponseTime": true,
            "showDuration": true,
            "showMessageCount": true,
            "showLinesAdded": true,
            "showLinesRemoved": true
          },
          "context": { "enabled": true },
          "tmux": { "enabled": false }
        }
      },
      {
        "segments": {
          "git": {
            "enabled": true,
            "showSha": true,
            "showWorkingTree": true,
            "showOperation": true,
            "showTag": true,
            "showTimeSinceCommit": true,
            "showStashCount": true,
            "showUpstream": true,
            "showRepoName": true
          }
        }
      }
    ]
  }
}